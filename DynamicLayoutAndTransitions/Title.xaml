<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	x:Class="DynamicLayoutAndTransitions.Title"
	d:DesignWidth="640" d:DesignHeight="480">

	<Grid x:Name="LayoutRoot">
		<Viewbox Margin="50">
			<StackPanel>
				<TextBlock HorizontalAlignment="Center" Text="Dynamic Layout and Transitions" FontFamily="Segoe UI" FontSize="96" Foreground="#FFF0F0F0" Width="700" TextWrapping="Wrap" TextAlignment="Center"/>
				<TextBlock HorizontalAlignment="Center" Text="Kenny Young, Expression Blend Architect" FontFamily="Segoe UI" FontSize="32" FontStyle="Italic" Foreground="#FFF0F0F0"/>
			</StackPanel>
		</Viewbox>
	</Grid>
</UserControl>